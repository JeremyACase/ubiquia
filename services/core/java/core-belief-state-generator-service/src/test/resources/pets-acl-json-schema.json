{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "definition": "Maui real estate investment opportunity enumeration",
  "properties": {
    "requestTimestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the request"
    },
    "user": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Unique identifier for the user"
        },
        "riskTolerance": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "description": "User's risk tolerance level"
        },
        "investmentHorizon": {
          "type": "string",
          "enum": [
            "short-term",
            "mid-term",
            "long-term"
          ],
          "description": "User's investment horizon"
        }
      },
      "required": [
        "userId"
      ]
    },
    "opportunities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "propertyId": {
            "type": "string",
            "description": "Unique identifier for the property"
          },
          "address": {
            "type": "string",
            "description": "Property address"
          },
          "location": {
            "type": "string",
            "description": "Property location within Maui"
          },
          "estimatedValue": {
            "type": "number",
            "minimum": 0,
            "description": "Estimated property value"
          },
          "rentalYield": {
            "type": "number",
            "minimum": 0,
            "description": "Estimated rental yield"
          },
          "potentialReturn": {
            "type": "number",
            "minimum": 0,
            "description": "Potential return on investment"
          },
          "propertyType": {
            "type": "string",
            "enum": [
              "single-family",
              "condo",
              "vacation rental",
              "land"
            ],
            "description": "Type of property"
          },
          "description": {
            "type": "string",
            "maxLength": 200,
            "description": "Detailed property description"
          }
        },
        "required": [
          "propertyId",
          "address",
          "location",
          "estimatedValue",
          "rentalYield",
          "potentialReturn"
        ]
      }
    }
  }
}